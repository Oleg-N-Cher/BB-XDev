MODULE GrTiles;

TYPE
  ADR = SHORTINT;
  Colors* = BYTE;
  Coords* = BYTE;
  Tile* = ADR;
  TranspTile* = ADR;

PROCEDURE DrawTile8x8* (x, y: BYTE; tile: Tile); END DrawTile8x8;
(** Draw a two-color tile with user-defined colors: *)
PROCEDURE DrawMonoTile8x8* (
  x, y: BYTE; tile: Tile; colors: Colors);
END DrawMonoTile8x8;

PROCEDURE DrawTranspMonoTile8x8* (
  x, y: Coords; VAR tile: TranspTile; colors: Colors);
END DrawTranspMonoTile8x8;

(** Draw a tile with default size: *)
PROCEDURE DrawTile* (x, y: BYTE; tile: Tile); END DrawTile;

PROCEDURE DrawMonoTile* (x, y: BYTE; tile: Tile; colors: Colors);
END DrawMonoTile;

PROCEDURE DrawTranspMonoTile* (x, y: BYTE; tile: TranspTile; colors: Colors);
END DrawTranspMonoTile;

PROCEDURE GetTile8x8* (x, y: BYTE; tile: Tile); END GetTile8x8;

PROCEDURE GetMonoTile8x8* (x, y: BYTE; tile: Tile); END GetMonoTile8x8;

PROCEDURE GetTile* (x, y: BYTE; tile: Tile); END GetTile;

PROCEDURE GetMonoTile* (x, y: BYTE; tile: Tile); END GetMonoTile;

END GrTiles.
