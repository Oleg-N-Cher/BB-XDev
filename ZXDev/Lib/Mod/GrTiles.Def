MODULE GrTiles;

TYPE
  ADDRESS = SHORTINT;
  Colors* = BYTE;
  Coords* = BYTE;
  Tile* = ADDRESS;
  TranspTile* = ADDRESS;

PROCEDURE DrawTile8x8* (x, y: SHORTINT; tile: Tile); END DrawTile8x8;
(** Draw a two-color tile with user-defined colors: *)
PROCEDURE DrawMonoTile8x8* (
  x, y: SHORTINT; tile: Tile; colors: Colors);
END DrawMonoTile8x8;

PROCEDURE DrawTranspMonoTile8x8* (
  x, y: Coords; VAR tile: TranspTile; colors: Colors);
END DrawTranspMonoTile8x8;

(** Draw a tile with default size: *)
PROCEDURE DrawTile* (x, y: SHORTINT; tile: Tile); END DrawTile;

PROCEDURE DrawMonoTile* (x, y: SHORTINT; tile: Tile; colors: Colors);
END DrawMonoTile;

PROCEDURE DrawTranspMonoTile* (x, y: SHORTINT; tile: TranspTile; colors: Colors);
END DrawTranspMonoTile;

END GrTiles.
