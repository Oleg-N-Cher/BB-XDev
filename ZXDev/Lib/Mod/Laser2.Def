MODULE Laser2; (** non-portable *)

(***********************)
(*    LASER BASIC 2    *)
(*   by Oleg N. Cher   *)
(* zx.oberon2.ru/forum *)
(***********************)

TYPE
  ADR     = LONGINT;
  UBYTE   = INTEGER;
  SPRITES = ARRAY OF CHAR;

(** New procedures: *)
PROCEDURE SPRT  * (adr: ADR) (** Init sprites *)  ; END SPRT;
PROCEDURE SPRTv * (adr: ADR) (** in variable *)   ; END SPRTv;
PROCEDURE SPRTa * (sprites: SPRITES) (** array *) ; END SPRTa;
PROCEDURE SCRN  * (adr: ADR) (** Set screen *)    ; END SCRN;

(** Synonyms for the new procedures: *)
PROCEDURE InitSprites  * (adr: ADR)               ; END InitSprites;
PROCEDURE InitSpritesV * (adr: ADR) (** in var *) ; END InitSpritesV;
PROCEDURE InitSpritesA * (sprites: SPRITES)       ; END InitSpritesA;
PROCEDURE SetScreen    * (adr: ADR)               ; END SetScreen;

(** Procedures for sprite manipulations: *)
PROCEDURE ATOF *                                  ; END ATOF;
PROCEDURE ATON *                                  ; END ATON;
PROCEDURE INVM * (spn: UBYTE)                     ; END INVM;
PROCEDURE PTBL * (col, row: SHORTINT; spn: UBYTE) ; END PTBL;
PROCEDURE PTOR * (col, row: SHORTINT; spn: UBYTE) ; END PTOR;
PROCEDURE PTND * (col, row: SHORTINT; spn: UBYTE) ; END PTND;
PROCEDURE PTXR * (col, row: SHORTINT; spn: UBYTE) ; END PTXR;

END Laser2.